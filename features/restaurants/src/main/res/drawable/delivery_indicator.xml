<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/indicator_on" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="?attr/colorControlNormal" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/indicator_off" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="?attr/colorControlNormal" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>